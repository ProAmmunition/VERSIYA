@model _25948083_Wassenaar_L_Project_3.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VERSIYA LOGIN</title>
    <style type="text/css">
    .form-horizontal {color:lawngreen; background-color:black; text-align:center; font-size:40px;font-family:impact}
    .form-group {color:lawngreen; text-align:center; font-family:calibri;font-size:large}
    .col-md-10{color:white; text-align:center; font-family:arial;font-size:small}
    .button{color:lawngreen; background-color:black; width:130px; text-align:center;font-size:x-large;border-radius: 12px;border-color:lawngreen}
    .button:hover{transform:scale(1.1)}
    .link{font-family:Calibri;text-align:center;font-size:large}
    .space{color:black;font-size:x-small}
    .label{background-color:lawngreen;color:black;font-family:impact;font-size:40px}
    .label_login{color:lawngreen; text-align:center; font-family:arial;font-size:small}
    .detail{color:white;font-family:arial;font-size:large;position:fixed; bottom:0; left:0; text-align:center; width:100%}
    .message{font-family:Calibri;font-size:x-small;color:white;text-align:center}
    </style>
</head>
<body style="background-color:black">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="label">
                <h4>VERSIYA</h4>
            </div>

            <div class="label_login">
                <h1>USER LOGIN</h1>
            </div>
         
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", autofocus = true }})
                    <div>
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    <div>
                       @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                   </div>
                </div>
            </div>
            <div class="space">
                <h1>--------------------------</h1>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="LOGIN" class="button" />
                </div>
              
            </div>
        </div>
        <div class="detail">
            <p>Contact Details:</p>
            <p>Cell: 0781016485 </p>
            <p>E-mail address: wassenleonard@gmail.com </p>
        </div>
        <div class="message">
            <h1></h1>
            <h1>@Html.ViewData["Message"]</h1>
        </div>
    }

    <div class="link">
        @Html.ActionLink("Create an account", "Registration_page", "Registration", null, new { @Style = "color:white" })
        <h1>------------------</h1>
    </div>
</body>

</html>
