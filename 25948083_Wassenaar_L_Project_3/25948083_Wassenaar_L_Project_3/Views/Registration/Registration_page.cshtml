@model _25948083_Wassenaar_L_Project_3.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration_page</title>
</head>
<body style="background-color:black">
        <style type="text/css">
    .form-horizontal {color:lawngreen; background:black; text-align:center; font-size:30px;font-family:Impact}
    .form-group {color:lawngreen; text-align:center; font-family:Calibri;font-size:medium}
    .col-md-10{color:white; text-align:center; font-family:Calibri;font-size:small}
    .button{color:black; background-color:lawngreen; width:130px; text-align:center; font-family:Impact;font-size:x-large}
    .button:hover{transform:scale(1.1)}
    .link{font-family:Calibri;text-align:left}
    .space{color:black;font-size:x-small}
    .label_heading{background-color:lawngreen;color:black;font-family:Impact;font-size:30px}
    .label_registration{color:lawngreen; text-align:center; font-family:Calibri;font-size:small}
    .message{font-family:Calibri;font-size:x-small;color:white;text-align:center}
   
  

    </style>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <div class="label_heading">
              <h2>VERSIYA</h2>
            </div>
            <div class="label_registration">
                <h2>REGISTRATION</h2>
            </div>
            <hr/>
           
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h1></h1>
                @Html.LabelFor(model => model.User_id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.User_id, new { htmlAttributes = new { @class = "form-control" } })
                    <div>
                        @Html.ValidationMessageFor(model => model.User_id, "", new { @class = "text-danger" })
                    </div> 
                </div>
            </div>
    
            <div class="form-group">
                <h1></h1>
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    <div>
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
    
            <div class="form-group">
                <h1></h1>
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    <div>
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
    
            <div class="form-group">
                <h1></h1>
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    <div>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
    
            <div class="form-group">
                <h1></h1>
                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    <div>
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
    
            <div class="form-group">
                <div>
                    <div class="space">
                        <h1>-----------------------------</h1>
                    </div>
                    
                    <input class="button" type="submit" value="REGISTER" />
                </div>
            </div>
            <div class="message">
                <h1></h1>
                <h1>@Html.ViewData["Message"]</h1>
            </div>
            
        </div>
    }
    
    <div class="link">
        <h1></h1>
        <h1></h1>
        @Html.ActionLink("Back to login","Index", "Login", null, new { @Style = "color:white" })
       
    </div>
</body>
</html>
