@model _25948083_Wassenaar_L_Project_3.Models.FileModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Commit</title>
     <style type="text/css">
      @@keyframes flicker {from { opacity: 0; }to { opacity: 1;}}
     .heading {color:black; background:lawngreen; text-align:center; font-size:large;font-family:Impact}
     .welcome_heading{color:white;font-family:Calibri;font-size:x-small;font-style:oblique}
     .label {color:lawngreen; font-size:medium;font-family:Calibri; text-align:left}
     .button_area{font-size:large;text-align:center;font-family:Impact}
     .button_area_2{font-size:large;text-align:left}
     .button {width: 185px; color: lawngreen; background-color:black; font-family:arial; font-size:large;border-radius: 12px;border-color:lawngreen}
     .button_browse {width: 350px; color: lawngreen; background-color:black; font-family:arial; font-size:large;border-radius: 12px;border-color:lawngreen}
     .button:hover{transform:scale(1.1)}
     .button_back{color:white; background-color:black; width:130px; text-align:center;font-size:small;border-radius: 12px;border-color:white}
     .button_back:hover{transform:scale(1.1)}
     .link{font-family:Calibri;text-align:left;font-size:medium}
     .view_data{color:white;font-size:6px;font-family:Calibri}
     .browse{color:white;text-align:center;color:lawngreen;font-family:Calibri;font-size:medium;width}
     .link_2{font-family:Calibri;text-align:center;font-size:large}
     .textbox_size{width:500px;border-radius:8px}
     .panel_area{margin: 0 auto; border:8px solid lawngreen;padding:2%; padding: 5px; font-size: medium; width: 700px; height: 180px;background-color:black; color: black;text-align:center;border-radius: 12px;border-color:lawngreen}
     .info { position: relative; display: inline-block;color:lawngreen;background-color:black;border-color:lawngreen;font-family:Arial;font-weight:bold;font-size:x-large;animation-name:flicker; animation: 9s linear infinite flicker}
     .info .info_text {visibility: hidden;width: 350px;background-color: lawngreen;color: black;text-align:center;font-size:small;border-radius: 6px;padding: 5px 0;position: absolute;z-index: 1;border-color:lawngreen}
     .info:hover .info_text {visibility: visible;}
      input[type='file']::-webkit-file-upload-button{width: 120px; color: black; background-color:lawngreen; font-family:Calibri;font-weight:bold; font-size:large;border-radius: 12px;border-color:lawngreen}
     </style>

</head>

<body style="background-color:black">
@using (Html.BeginForm("Commit", "FilePage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="welcome_heading">
        <h2>Logged in as @TempData["get_username"]</h2>
    </div>
    <div class="heading">
        <h1>UPLOAD OR UPDATE AN EXISTING FILE</h1>
    </div>

    <div class="info">
        Info?
        <span class="info_text">The web application will automatically detect if an uploaded file exists. Please don't change the file name when updating a particular file</span>
    </div>
    <h1></h1>
    <div class="panel_area">
        <div class="browse">
            <h1></h1>
            @Html.TextBox("File", "", new { type = "File", @class = "button_browse"})
            <h1></h1>
            @Html.LabelFor(model => model.file_descripion)
            @Html.TextBoxFor(model => model.file_descripion, new { @class = "textbox_size" })
            <h1></h1>
            <h1></h1>
            <input type="submit" value="UPLOAD/UPDATE" class="button" />
            <div class="view_data">
                <h1>@Html.ViewData["Message"]</h1>
            </div>
            
        </div>

     
        <h1></h1>
    </div>

    <div class="link_2">
        <p></p>
        <input type="button" class="button" value="FILE LOG" onclick="location.href='@Url.Action("Uploads","FilePage")'">
        <input type="button" class="button" value="UPLOADED FILES" onclick="location.href='@Url.Action("downloads","FilePage")'">
    </div>

    <div class="link">
        <h1>-----</h1>
        <h1>-----</h1>
        <h1>-----</h1>
        <input type="button" class="button_back" value="LOGOUT" onclick="location.href='@Url.Action("Index","Login")'">
 </div>
}

</body>
</html>
