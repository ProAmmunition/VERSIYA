@model _25948083_Wassenaar_L_Project_3.Models.FileModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Commit</title>
     <style type="text/css">
     .heading {color:black; background:lawngreen; text-align:center; font-size:xx-large;font-family:Impact}
     .supheading {color:lawngreen;text-align:center; font-size:medium;font-family:Calibri}
     .label {color:lawngreen; font-size:medium;font-family:Calibri; text-align:left}
     .button_area{font-size:large;text-align:center;font-family:Impact}
     .button_area_2{font-size:large;text-align:left}
     .button {width: 300px; color: lawngreen; background-color:black; font-family:arial; font-size:large;border-radius: 12px;border-color:lawngreen}
     .button:hover{transform:scale(1.1)}
     .link{font-family:Calibri;text-align:left}
     .view_data{color:white;font-size:6px;font-family:Calibri}
     .browse{color:white;text-align:center;color:lawngreen;font-family:Calibri;font-size:medium}
     .link_2{font-family:Calibri;text-align:center;font-size:large}
     .textbox_size{width:500px;}
     .panel_area{margin: 0 auto; border:8px solid lawngreen;padding:2%; padding: 5px; font-size: medium; width: 700px; height: 250px;background:black; color: black;text-align:center}
     </style>
</head>

<body style="background-color:black">
@using (Html.BeginForm("Commit", "FilePage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="heading">
        <h1>VERSIYA</h1>
    </div>
    <div class="supheading">
        <h1>UPLOAD OR UPDATE AN EXISTING FILE</h1>
    </div>
    <div class="panel_area">
        <div class="browse">

            @Html.TextBox("File", "", new { type = "File", @class = "button"})
            <h1></h1>
            @Html.LabelFor(model => model.file_descripion)
            @Html.TextBoxFor(model => model.file_descripion, new { @class = "textbox_size" })
            <h1></h1>
            <h1></h1>
            <input type="submit" value="UPLOAD/UPDATE" class="button" />
            <div class="view_data">
                <h1>@Html.ViewData["Message"]</h1>
            </div>
        </div>

        <div class="link_2">
            <p></p>
            @Html.ActionLink("Modified file history", "Uploads", "FilePage", null, new { @Style = "color:lawngreen" })
            <p></p>
            @Html.ActionLink("View existing files", "downloads", "FilePage", null, new { @Style = "color:lawngreen" })
        </div>
        <h1></h1>
    </div>

    <div class="link">
        <h1>-----</h1>
        @Html.ActionLink("<<Back to login page", "Index", "Login", null, new { @Style = "color:lawngreen" })
 </div>
}

</body>
</html>
